---
import Emoji from "./Emoji.astro";
interface Props {
  title: string;
  description: string;
  img_src: string;
  alt: string;
  emoji: string;
  href: string;
}

const { title, description, img_src, alt, emoji, href } = Astro.props;
---

<li
  class="col-span-2 mt-2 w-auto bg-blue-50 border shadow-xl rounded-xl hover:scale-105 duration-300 sm:col-span-1"
>
  <a href={href} class="grid p-2 sm:p-3">
    <div
      class="flex items-center justify-center bg-blue-200 w-full h-44 rounded-xl"
    >
      {
        img_src ? (
          <img
            src={img_src}
            alt={alt}
            class="m-auto w-full max-h-44 object-cover rounded-xl"
          />
        ) : (
          <Emoji emoji={emoji} />
        )
      }
    </div>
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-base">{description}</p>
  </a>
</li>
